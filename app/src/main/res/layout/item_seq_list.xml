<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="3dp">

        <TextView
            android:id="@+id/tv_index"
            style="@style/BoldTextViewStyle"
            android:ems="2"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_seq_name"
            style="@style/BoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:singleLine="true"
            android:text="home"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_upward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@drawable/selector_seq_upward"/>

        <ImageView
            android:id="@+id/iv_downward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@drawable/selector_seq_downward"/>

        <TextView
            android:id="@+id/tv_time"
            style="@style/BoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="2017-06-09"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_remove"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="3dp"
            android:src="@drawable/ic_remove"/>

    </LinearLayout>

</LinearLayout>