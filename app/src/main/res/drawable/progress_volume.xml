<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#1c3135"
                android:centerColor="#273d41"
                android:endColor="#1c3135"/>

            <!-- padding设置内容区域离边界的间距 -->
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
            <!-- corners设置圆角，只适用于rectangle -->
            <corners android:radius="200dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#051118"/>
            <!-- corners设置圆角，只适用于rectangle -->
            <corners android:radius="200dp" />
        </shape>
    </item>

</layer-list>